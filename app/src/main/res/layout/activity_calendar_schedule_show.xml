<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_calendar_schedule_show_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0000/00/00"
            android:textSize="30dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <TextView
        android:id="@+id/tv_calendar_schedule_show_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="일정"
        android:textSize="20dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_calendar_schedule_show_gps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="위치"
        android:layout_margin="10dp"/>


    <com.naver.maps.map.MapView
        android:id="@+id/mv_calendar_schedule_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn_calendar_schedule_show_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:layout_gravity="center"/>

</LinearLayout>